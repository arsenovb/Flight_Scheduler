@model Flight_Scheduler.Models.Flight
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this flight?</h3>
<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Origin</dt>
        <dd class="col-sm-10">@Model.Origin?.Name</dd>

        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination?.Name</dd>

        <dt class="col-sm-2">Departure</dt>
        <dd class="col-sm-10">@Model.DepartureTime</dd>

        <dt class="col-sm-2">Arrival</dt>
        <dd class="col-sm-10">@Model.ArrivalTime</dd>

        <dt class="col-sm-2">Gate</dt>
        <dd class="col-sm-10">@Model.Gate</dd>

        <dt class="col-sm-2">Airline</dt>
        <dd class="col-sm-10">@Model.Airlines?.Name</dd>

        <dt class="col-sm-2">Aircraft</dt>
        <dd class="col-sm-10">@Model.Aircraft?.Model</dd>

        <dt class="col-sm-2">Crew</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var crew in Model.FlightCrews)
                {
                    <li>@crew.FirstName @crew.LastName (@crew.Position)</li>
                }
            </ul>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
