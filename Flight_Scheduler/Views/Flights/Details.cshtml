@model Flight_Scheduler.Models.Flight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Origin</dt>
        <dd class="col-sm-10">@Model.Origin</dd>

        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>

        <dt class="col-sm-2">Departure Time</dt>
        <dd class="col-sm-10">@Model.DepartureTime</dd>

        <dt class="col-sm-2">Arrival Time</dt>
        <dd class="col-sm-10">@Model.ArrivalTime</dd>

        <dt class="col-sm-2">Gate</dt>
        <dd class="col-sm-10">@Model.Gate</dd>

        <dt class="col-sm-2">Airline</dt>
        <dd class="col-sm-10">@Model.Airlines?.Name</dd>

        <dt class="col-sm-2">Aircraft</dt>
        <dd class="col-sm-10">@Model.Aircraft?.Model</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
